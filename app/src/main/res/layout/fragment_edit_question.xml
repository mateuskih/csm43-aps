<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterFragment" android:background="@drawable/padrao_layout_telas">

    <TextView
            android:text="@string/create_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginTop="20dp"
            app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="192dp"
                    android:layout_height="263dp"
                    android:id="@+id/listQuestions"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></androidx.recyclerview.widget.RecyclerView>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="192dp"
                    android:layout_height="263dp"
                    android:id="@+id/listDificuldades"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/listQuestions"
                    android:layout_marginTop="72dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"></androidx.recyclerview.widget.RecyclerView>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="177dp"
                    android:layout_height="264dp"
                    android:id="@+id/listCategories"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/listQuestions"
                    android:layout_marginTop="72dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp">

            </androidx.recyclerview.widget.RecyclerView>

            <EditText
                    android:layout_width="300dp"
                    android:layout_height="37dp"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:ems="10"
                    android:id="@+id/txtQuestionTitle"
                    android:hint="@string/question_title"
                    app:layout_constraintBottom_toTopOf="@+id/txtCorrectAnswer"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="TextContrastCheck"
                    android:importantForAutofill="no"
                    app:layout_constraintHorizontal_bias="0.505"
                    app:layout_constraintTop_toTopOf="@+id/guideline11"
                    app:layout_constraintVertical_bias="1.0" />

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/txtCorrectAnswer"
                    android:hint="@string/answer_correct"
                    android:textColor="@android:color/background_light"
                    android:drawablePadding="10dp"
                    android:minHeight="48dp"
                    tools:ignore="TextContrastCheck,DuplicateSpeakableTextCheck"
                    android:importantForAutofill="no"
                    app:layout_constraintBottom_toTopOf="@+id/txtAnswer1"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" />

            <TextView
                    android:text="@string/settings_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSelected"
                    android:textSize="18sp"
                    android:textColor="@android:color/background_light"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/listCategories"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    tools:ignore="TextContrastCheck"
                    app:layout_constraintBottom_toTopOf="@+id/txtQuestionTitle"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintEnd_toEndOf="@+id/listCategories"
                    app:layout_constraintHorizontal_bias="0.373" />

            <TextView
                    android:text="@string/title_categoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTitleCategories"
                    android:textSize="18sp"
                    android:textColor="@android:color/background_light"
                    tools:ignore="TextContrastCheck"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/listCategories"
                    app:layout_constraintHorizontal_bias="0.537"
                    app:layout_constraintBottom_toTopOf="@+id/listCategories"
                    app:layout_constraintTop_toBottomOf="@+id/listQuestions"
                    app:layout_constraintVertical_bias="0.77" />

            <TextView
                    android:text="@string/title_dificuldade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTitleDificuldades"
                    android:textSize="18sp"
                    android:textColor="@android:color/background_light"
                    tools:ignore="TextContrastCheck"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/listDificuldades"
                    app:layout_constraintHorizontal_bias="0.622"
                    app:layout_constraintTop_toBottomOf="@+id/listQuestions"
                    android:layout_marginTop="36dp" />

            <TextView
                    android:text="@string/settings_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSelectedDificuldade"
                    android:textSize="18sp"
                    android:textColor="@android:color/background_light"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp"
                    tools:ignore="TextContrastCheck"
                    app:layout_constraintBottom_toTopOf="@+id/txtQuestionTitle"
                    app:layout_constraintStart_toStartOf="@+id/listDificuldades"
                    app:layout_constraintHorizontal_bias="0.574"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/listDificuldades"
                    app:layout_constraintVertical_bias="1.0" />

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/txtAnswer1"
                    android:hint="@string/answer"
                    android:textColor="@android:color/background_light"
                    android:drawablePadding="10dp"
                    android:minHeight="48dp"
                    tools:ignore="TextContrastCheck"
                    android:importantForAutofill="no"
                    app:layout_constraintBottom_toTopOf="@+id/txtAnswer2"
                    android:layout_marginBottom="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintEnd_toEndOf="parent" />

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/txtAnswer2"
                    android:hint="@string/answer"
                    android:textColor="@android:color/background_light"
                    android:drawablePadding="10dp"
                    android:minHeight="48dp"
                    tools:ignore="TextContrastCheck"
                    android:importantForAutofill="no"
                    app:layout_constraintBottom_toTopOf="@+id/txtAnswer3"
                    android:layout_marginBottom="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintEnd_toEndOf="parent" />

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/txtAnswer3"
                    android:hint="@string/answer"
                    android:textColor="@android:color/background_light"
                    android:drawablePadding="10dp"
                    android:minHeight="48dp"
                    tools:ignore="TextContrastCheck"
                    android:importantForAutofill="no"
                    app:layout_constraintBottom_toTopOf="@+id/btCadastrar"
                    android:layout_marginBottom="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp" />

            <Button
                    android:text="@string/register_register"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btCadastrar"
                    android:drawableLeft="@drawable/ic_send_black_24dp"
                    android:textColor="@android:color/background_light"
                    android:background="@drawable/roundedbutton"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:drawableStart="@drawable/ic_send_black_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="TextContrastCheck"
                    android:paddingRight="10dp"
                    app:layout_constraintHorizontal_bias="1.0" />

            <androidx.constraintlayout.widget.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_begin="354dp"
                    android:id="@+id/guideline11" />

            <androidx.constraintlayout.widget.Barrier
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="left"
                    tools:layout_editor_absoluteY="111dp"
                    tools:layout_editor_absoluteX="255dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
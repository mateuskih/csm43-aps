<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterFragment" android:background="@drawable/padrao_layout_telas">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:id="@+id/txtRegNome"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:hint="@string/register_name"
            app:layout_constraintHorizontal_bias="0.483"
            android:textColor="@android:color/background_light"
            android:layout_marginTop="128dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:drawablePadding="10dp"
            android:minHeight="48dp"
            tools:ignore="TextContrastCheck"
            android:importantForAutofill="no"
            android:drawableStart="@drawable/ic_person_black_24dp" />

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtRegEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintHorizontal_bias="0.494"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:hint="@string/register_email"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/txtRegNome"
            android:textColor="@android:color/background_light"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:drawablePadding="10dp"
            android:minHeight="48dp"
            tools:ignore="TextContrastCheck"
            android:importantForAutofill="no"
            android:drawableStart="@drawable/ic_email_black_24dp" />

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtRegSenha"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:hint="@string/register_password"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/txtRegEmail"
            android:textColor="@android:color/background_light"
            android:drawablePadding="10dp"
            android:minHeight="48dp"
            tools:ignore="TextContrastCheck"
            android:importantForAutofill="no"
            android:drawableStart="@drawable/ic_lock_black_24dp" />

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtRegSenha2"
            android:layout_marginEnd="20dp"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:hint="@string/register_password_confirm"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/txtRegSenha"
            android:textColor="@android:color/background_light"
            android:drawablePadding="10dp"
            android:minHeight="48dp"
            android:importantForAutofill="no"
            tools:ignore="TextContrastCheck"
            android:drawableStart="@drawable/ic_lock_black_24dp" />


    <Button
            android:text="@string/register_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btCadastrar"
            android:drawableLeft="@drawable/ic_send_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@android:color/background_light"
            android:background="@drawable/roundedbutton"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:drawableStart="@drawable/ic_send_black_24dp"
            android:paddingRight="10dp"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintTop_toBottomOf="@+id/btnPickImage"
            android:layout_marginTop="24dp" />

    <Button
            android:text="Image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnPickImage"
            android:layout_marginTop="32dp"
            android:drawableLeft="@drawable/ic_baseline_add_a_photo_24"
            app:layout_constraintTop_toBottomOf="@+id/txtRegSenha2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@android:color/background_light"
            android:background="@drawable/roundedbutton"
            app:layout_constraintHorizontal_bias="0.498"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

    <TextView
            android:text="@string/register_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>
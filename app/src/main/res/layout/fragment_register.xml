<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterFragment" android:background="@drawable/padrao_layout_telas">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:id="@+id/txtRegNome"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:hint="@string/register_name" app:layout_constraintHorizontal_bias="0.483"
            android:textColor="@android:color/background_light" android:layout_marginTop="128dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <EditText
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtRegEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.494"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:hint="@string/register_email" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/txtRegNome" android:textColor="@android:color/background_light"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtRegSenha"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:hint="@string/register_password" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txtRegEmail" android:textColor="@android:color/background_light"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtRegSenha2"
            android:layout_marginEnd="8dp"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:hint="@string/register_password_confirm" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/txtRegSenha" android:textColor="@android:color/background_light"/>
    <Button
            android:text="@string/register_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btCadastrar"
            android:layout_marginTop="40dp"
            android:drawableLeft="@drawable/ic_send_black_24dp"
            app:layout_constraintTop_toBottomOf="@+id/txtRegSenha2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:textColor="@android:color/background_light" android:background="@drawable/roundedbutton"/>
    <TextView
            android:text="@string/register_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:gravity="center" android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>